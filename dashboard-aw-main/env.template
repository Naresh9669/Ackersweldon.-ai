# KYC API Configuration Template
# Copy this file to .env.local and fill in your actual API keys

# MillionVerifier API Configuration
# Get your API key from: https://app.millionverifier.com/api
MILLION_VERIFIER_API_KEY=your_millionverifier_api_key_here

# SearXNG Configuration
SEARXNG_BASE_URL=https://search.ackersweldon.com
SEARXNG_TIMEOUT=30000

# KYC Service Configuration
KYC_ENABLE_EMAIL_VERIFICATION=true
KYC_ENABLE_COMPANY_VERIFICATION=true
KYC_ENABLE_PERSON_VERIFICATION=true
KYC_MAX_PROCESSING_TIME=60000
KYC_ENABLE_CACHING=true
KYC_CACHE_TTL=3600000

# Risk Assessment Configuration
KYC_RISK_THRESHOLD_HIGH=70
KYC_RISK_THRESHOLD_MEDIUM=40
KYC_CONFIDENCE_THRESHOLD_HIGH=80
KYC_CONFIDENCE_THRESHOLD_MEDIUM=60

# Testing Configuration
KYC_USE_TEST_APIS=false
KYC_ENABLE_DEBUG_LOGGING=true

# 4. Test your APIs using: node scripts/test-kyc-apis.js
